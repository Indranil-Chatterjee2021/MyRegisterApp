        <center>
            {{!-- <h3 id="title">{{viewTitle}}</h3> --}}
            <h3 style="font-style: italic;">Add Employee</h3>
            {{#if success }}
            <div class="alert alert-success text-green" role="alert" style="max-width: 300px;height:auto;font-size:small;">
                {{success}}
            </div>
            {{/if}}
            {{#if error}}
            <div class="alert alert-danger text-red" role="alert" style="max-width: 500px;height:auto;font-size:small;">
                {{error}}
            </div>
            {{/if}}
        </center>
<form action="/employee" method="POST" autocomplete="off" id="add_emp" >
    <input type="hidden" name="_id" value="{{employee.emp_id}}">
    <div class="form-group">
        <label>Employee Name</label>
        <input type="text" class="form-control" id="name" name="empName" placeholder="Employee Name" value="{{Data.empName}}">
        {{#if errors.empName }}
        <p>*{{ errors.empName.msg }}</p>
        {{/if}}
    </div>
    <div class="form-group">
        <label>Employee Address</label>
        <input type="text" class="form-control" id="addr" name="address" placeholder="Employee Address"
            value="{{Data.address}}">
            {{#if errors.address }}
            <p>*{{ errors.address.msg }}</p>
            {{/if}}
    </div>
    <div class="form-group">
        <label>Email Address</label>
        <input type="email" class="form-control" id="email" name="email" placeholder="Email Address" value="{{Data.email}}">
        {{#if errors.email }}
        <p>*{{ errors.email.msg }}</p>
        {{/if}}
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Mobile</label>
            <input type="text" class="form-control" id="mob" name="mobile" placeholder="Mobile" value="{{Data.mobile}}">
            {{#if errors.mobile }}
            <p>*{{ errors.mobile.msg }}</p>
            {{/if}}
        </div>
        <div class="form-group col-md-6">
            <label>Salary</label>
            <input type="text" class="form-control" id="sal" name="salary" placeholder="Salary" value="{{Data.salary}}">
            {{#if errors.salary }}
            <p>*{{ errors.salary.msg }}</p>
            {{/if}}
        </div>
        <div hidden class="form-group col-md-6" id="dept">
            <label>Department</label>
            <input type="text" readonly="true" class="form-control" id="deptBox" name="depat" placeholder="Department" value="{{Data.depat}}">
        </div>
        <div class="form-group col-md-6">
            <label id="Dept">Choose Department</label><br> <select style="font-size:12px;font-weight:bold;" class="DselectBox" name="dept" id="selector" onchange="selectChanger();">
				{{!-- <option hidden>Choose Department...</option> --}}
                <option hidden="hidden" selected="selected" value={{Data.dept}}>{{Data.depat}}</option>
                
        {{#each list}}
        <option value={{this._id}} style="font-size:12px;font-weight:bold;">{{this.deptName}}</option>
        {{/each}}
        </select>
        {{#if errors.dept }}
        <p>*{{ errors.dept.msg }}</p>
        {{/if}}
        </div>
    </div>
    <div class="form-group">
        <center><button type="submit" class="btn btn-info"><i class="fa fa-database"></i>&nbsp;Submit</button></center>
    </div>
