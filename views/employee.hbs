<script>
  function submitForm()
  {
      if(viewtitle !== "Add Employee"){
           alert("Data Updated Successfully!");
      }
  }  
  function myFunction() 
  {
    var viewtitle = document.getElementById("title").innerHTML;
    if (viewtitle !== "Add Employee"){
       document.getElementById("Dept").innerHTML = "Select Department To Change";
       document.getElementById("add_emp").id = "update_emp";
       document.getElementById("update_emp").action="/employee/update";
       //document.getElementById("submit").innerHTML="Update";
       document.getElementById("submit").style.display = 'none';
       document.getElementById("update").style.display='block';
       document.getElementById("ecode").readOnly=true;
       }else{
           document.getElementById("dept").style.display="none";
           document.getElementById("update").style.display = 'none';
       }
  }
  function selectChanger()
  {
      var d=document.getElementById("selector");
      var deptbox = d.options[d.selectedIndex].text;
      document.getElementById("deptBox").value = deptbox;
      
  }
</script>
</head>

