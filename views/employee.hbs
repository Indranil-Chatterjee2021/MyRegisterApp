<script>
  function submitForm()
  {
      if(viewtitle !== "Add Employee"){
           alert("Data Updated Successfully!");
      }
  }  
  function myFunction() 
  {
    var viewtitle = document.getElementById("title").innerHTML;
    if (viewtitle !== "Add Employee"){
       document.getElementById("Dept").innerHTML = "Select Department To Change";
       document.getElementById("add_emp").id = "update_emp";
       document.getElementById("update_emp").action="/employee/update";
       //document.getElementById("submit").innerHTML="Update";
       document.getElementById("submit").style.display = 'none';
       document.getElementById("update").style.display='block';
       document.getElementById("ecode").readOnly=true;
       }else{
           document.getElementById("dept").style.display="none";
           document.getElementById("update").style.display = 'none';
       }
  }
  function selectChanger()
  {
      var d=document.getElementById("selector");
      var deptbox = d.options[d.selectedIndex].text;
      document.getElementById("deptBox").value = deptbox;
      
  }
</script>
</head>

<body class="bg-info" onload="myFunction();">
    <div class="row">
        <div class="col-md-6 offset-md-3" style="background-color: #fff;border-radius:36px;margin-top: 25px;padding:20px;">
        <ul>
            <li><a href="/"><i class="fa fa-home fa-fw" aria-hidden="true"></i>&nbsp;Home</a></li>
            <li><a href="/department"><i class="fa fa-plus fa-fw" aria-hidden="true"></i>&nbsp;Add Department</a></li>
            <li><a href="/employeeList"><i class="fa fa-list-alt fa-fw" aria-hidden="true"></i>&nbsp;View Employee</a></li>
        </ul>
        <br>
        <center>
            <h3 id="title">{{viewTitle}}</h3>
        </center>
<script>
   var viewtitle = document.getElementById("title").innerHTML;
          {{#if error}}
            alert("{{error}}");
          {{else if success}} 
            alert("{{success}}");
          {{else}}

	      {{/if}}	
</script>            
<form action="/employee" method="POST" autocomplete="off" id="add_emp" >
    <input type="hidden" name="_id" value="{{employee._id}}">
    <div class="form-group">
        <label>Employee Code</label>
        <input type="text" class="form-control" id="ecode" name="empCode" placeholder="Employee Code" value="{{employee.empCode}}">
    </div>
    <div class="form-group">
        <label>Employee Name</label>
        <input type="text" class="form-control" name="empName" placeholder="Employee Name" value="{{employee.empName}}">
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Mobile</label>
            <input type="text" class="form-control" name="mobile" placeholder="Mobile" value="{{employee.Mobile}}">
        </div>
        <div class="form-group col-md-6">
            <label>Salary</label>
            <input type="text" class="form-control" name="salary" placeholder="Salary" value="{{employee.Salary}}">
        </div>
        <div class="form-group col-md-6" id="dept">
            <label>Department</label>
            <input type="text" readonly="true" class="form-control" id="deptBox" name="depat" placeholder="Department" value="{{employee.department}}">
        </div>
        <div class="form-group col-md-6">
            <label id="Dept">Choose Department</label> <select style="font-size:12px;font-weight:bold;" class="DselectBox" name="dept" id="selector" onchange="selectChanger();">
				<option hidden>Choose Department...</option>
        {{#each list}}
        <option style="font-size:12px;font-weight:bold;">{{this.deptName}}</option>
        {{/each}}
        </select>
  </div>
    </div>
    <div class="form-group">
        <center><button type="submit" class="btn btn-info" id="submit"><i class="fa fa-database"></i>&nbsp;Submit</button>
                <button type="submit" class="btn btn-info" onclick="submitForm();" id="update"><i style="color:white"class="fa fa-edit"
                    aria-hidden="true"></i>&nbsp;Update</button></center>
        {{!-- <a class="btn btn-secondary" href="/employeeList"><i class="fa fa-list-alt"></i> View All</a> --}}
    </div>
</form><br><center>
<div class="form-group">
    <span style="font-size: medium;font-weight:bold;color:chocolate">Developed By: Indranil Chatterjee</span>
</div>

</center>
